<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <Switch
            style="@style/Debug.Switch"
            android:layout_width= "match_parent"
            android:layout_height="100dp"
            android:text="@string/play_cue"
            android:id="@+id/playCue"
            android:checked="false" />

        <include layout="@layout/horizontal_line" />

        <SeekBar
            style="@style/Debug.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sbFrequency"
            android:thumb="@drawable/thumb_image"/>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <CheckBox
                style="@style/Cue.Checkbox"
                android:id="@+id/cbVisual"/>

            <TextView
                style="@style/Device.Text"
                android:id="@+id/tvVisual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tvVisual"/>

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <CheckBox
                style="@style/Cue.Checkbox"
                android:id="@+id/cbAudible"/>

            <TextView
                style="@style/Device.Text"
                android:id="@+id/tvAudible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tvAudible"/>

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <CheckBox
                style="@style/Cue.Checkbox"
                android:id="@+id/cbHaptic"/>

            <TextView
                style="@style/Device.Text"
                android:id="@+id/tvHaptic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tvHaptic"/>

        </LinearLayout>

        <include layout="@layout/horizontal_line" />

    </LinearLayout>
</ScrollView>